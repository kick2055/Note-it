@page
@model projekt.Pages.Notes.Notes_CreateModel
@{
    ViewData["Title"] = "Notes Create";
}
<h1>New Note</h1>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post" asp-antiforgery="false">
        <div class="form-group">
            <label asp-for="newNote.Name" class="control-label col-sm-
2"></label>
            <span asp-validation-for="newNote.Name" style="color: red"></span>
            <div class="col-sm-6">
                <input asp-for="newNote.Name" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newNote.Content"  class="control-label col-sm-
2"></label>
            <span asp-validation-for="newNote.Content" style="color: red"></span>
            <div class="col-sm-6">
                <textarea asp-for="newNote.Content"  class="form-control" > </textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Add</button>
            </div>
        </div>
    </form>
</div>