@page
@model projekt.Pages.Admin.Create_AccountModel
@{
    ViewData["Title"] = "create account";
}
<h1>New Account</h1>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post" asp-antiforgery="false">
        <div class="form-group">
            <label asp-for="newaccountcheck.Login" class="control-label col-sm-
2"></label>
            <span asp-validation-for="newaccountcheck.Login" style="color: red"></span>
            <div class="col-sm-6">
                <input asp-for="newaccountcheck.Login" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newaccountcheck.Password" class="control-label col-sm-
2"></label>
            <div class="col-sm-6">
                <input asp-for="newaccountcheck.Password" class="form-control">
                <span asp-validation-for="newaccountcheck.Password" style="color: red"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="newaccountcheck.PasswordAgain" class="control-label col-sm-
2"></label>
            <span asp-validation-for="newaccountcheck.PasswordAgain" style="color: red"></span>
            <div class="col-sm-6">
                <input asp-for="newaccountcheck.PasswordAgain" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Add</button>
            </div>
        </div>
    </form>
</div>