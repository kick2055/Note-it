@page
@model projekt.Pages.Expenses.Expenses_CalculationModel
@{
    ViewData["Title"] = "Expenses Calculation";
}
<h1>Calculating Expenses</h1>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post" asp-antiforgery="false">
        <div class="form-group">
            <label asp-for="interval.DateFrom" class="control-label col-sm-
2"></label>
            <span asp-validation-for="interval.DateFrom" style="color: red"></span>
            <div class="col-sm-6">
                <input asp-for="interval.DateFrom" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="interval.DateTo" class="control-label col-sm-
2"></label>
            <div class="col-sm-6">
                <input asp-for="interval.DateTo" class="form-control">
                <span asp-validation-for="interval.DateTo" style="color: red"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Calculate</button>
            </div>
        </div>
    </form>
</div>